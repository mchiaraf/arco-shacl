@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix a-cd: <https://w3id.org/arco/ontology/context-description/> .
@prefix a-ce: <https://w3id.org/arco/ontology/cultural-event/> .
@prefix a-dd: <https://w3id.org/arco/ontology/denotative-description/> .
@prefix lite: <https://w3id.org/arco/ontology/arco-lite/> .
@prefix a-loc: <https://w3id.org/arco/ontology/location/> .
@prefix arco: <https://w3id.org/arco/ontology/arco/> .
@prefix cis: <http://dati.beniculturali.it/cis/> .
@prefix clv: <https://w3id.org/italia/onto/CLV/> .
@prefix core: <https://w3id.org/arco/ontology/core/> .
@prefix cov: <https://w3id.org/italia/onto/COV/> .
@prefix cpv: <https://w3id.org/italia/onto/CPV/> .
@prefix ipac: <https://ipac.cultura.gov.it/onto/ipac/> .
@prefix l0: <https://w3id.org/italia/onto/l0/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ti: <https://w3id.org/italia/onto/TI/> . 
@prefix mu: <https://w3id.org/italia/onto/MU/> . 
@prefix ro: <https://w3id.org/italia/onto/RO/> . 
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix ex: <https://w3id.org/arco/shacl/> .

ex:ResponsibilityShape
    a sh:NodeShape ;
    sh:targetClass a-cd:Responsibility ;
	sh:property [              
		sh:path core:hasType ;     # eliminata con modellazione futura
		sh:class a-cd:ResponsibilityType ;
		sh:severity sh:Violation ;
		sh:message "La relazione della responsabilità con la sua tipologia è obbligatoria: core:hasType deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-cd:hasAgentWithResponsibility ;     
		sh:or (
            [ sh:class l0:Agent ]
            [ sh:class cov:Organization ]
            [ sh:class cpv:Person ]
            ) ;
		sh:severity sh:Violation ;
		sh:message "La relazione della responsabilità con il suo agente è obbligatoria: a-cd:hasAgentWithResponsibility deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-cd:hasIntervetionRole ;     
		sh:class ro:Role ;
		sh:severity sh:Violation ;
		sh:message "La relazione della responsabilità con il ruolo è obbligatoria: a-cd:hasInterventionRole deve essere materializzata"
		] ;
	sh:or (
		[
			sh:path a-cd:hasAgentWithResponsibility ;     
			sh:or (
				[ sh:class l0:Agent ]
				[ sh:class cov:Organization ]
				[ sh:class cpv:Person ]
				) ;
			sh:severity sh:Violation ;
			sh:message "La relazione della responsabilità con il suo agente (o l'ambito culturale) è obbligatoria: a-cd:hasCulturalScope deve essere materializzata"
		]
		[
			sh:path a-cd:hasCulturalScope ;     
			sh:class a-cd:CulturalScope ;
			sh:severity sh:Violation ;
			sh:message "La relazione della responsabilità con il suo ambito culturale (o il suo agente) è obbligatoria: a-cd:hasCulturalScope o a-cd:hasAgentWithResponsibility devono essere materializzate"
		]
	) ;
	# Modellazione futura: per i nuovi dati di clio
	sh:property [              
		sh:path ti:atTime ;     
		sh:class ti:TimeInterval 
		] .