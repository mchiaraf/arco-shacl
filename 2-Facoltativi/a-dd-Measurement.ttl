@prefix ex: <https://w3id.org/arco/shacl/> .

ex:TechnicalStatusShape
    a sh:NodeShape ;
    sh:targetClass a-dd:Measurement ;
	sh:property [              
		sh:path core:hasType ;     # eliminata con modellazione futura
		sh:class a-dd:MeasurementType ; #dà errore perchè devono essere caricate le onto con gli individui!
		sh:severity sh:Violation ;
		sh:message "La relazione della misurazione con la sua tipologia è obbligatoria: core:hasType deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-dd:hasValue ;     
		sh:class mu:Value ;
		sh:severity sh:Violation ;
		sh:message "La relazione della misurazione con il suo valore è obbligatoria: a-dd:hasValue deve essere materializzata"
		] ;
	sh:property [              
		sh:path mu:hasMeasurementUnit ;     
		sh:class mu:MeasurementUnit ;
		sh:severity sh:Violation ;
		sh:message "La relazione della misurazione con la sua unità di misura è obbligatoria: mu:hasMeasurementUnit deve essere materializzata"
		] ;
	# Modellazione futura: per i nuovi dati di clio
	sh:property [              
		sh:path a-dd:hasMeasurableProperty ;     
		sh:class a-dd:MeasurableProperty 
		] .