@prefix ex: <https://w3id.org/arco/shacl/> .

ex:AnomalyShape
    a sh:NodeShape ;
    sh:targetClass a-cd:Anomaly ;
	sh:property [              
		sh:path core:hasClassification ;     
		sh:class a-cd:AnomalyClassification ;
		sh:severity sh:Violation ;
		sh:minCount 1 ; 
		sh:maxCount 1 ; 
		sh:message "La relazione dell'anomalia con la sua classificazione è obbligatoria: core:hasClassification deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-cd:hasAnomalyOrigin ;     
		sh:or (
			[ sh:hasValue a-cd:AnthropicOrigin ]
			[ sh:hasValue a-cd:NaturalOrigin ]
			[ sh:hasValue a-cd:UncertainOrigin ]
		) ;
		sh:severity sh:Violation ;
		sh:minCount 1 ; 
		sh:maxCount 1 ; 
		sh:message "La relazione dell'anomalia con la sua origine è obbligatoria: a-cd:hasAnomalyOrigin deve essere materializzata"
		] ;
	sh:property [              
		sh:path core:hasType ;     
		sh:or (
			[ sh:hasValue a-cd:PointAnomaly ]
			[ sh:hasValue a-cd:LineAnomaly ]
			[ sh:hasValue a-cd:PolygonAnomaly ]
		) ;
		sh:severity sh:Violation ;
		sh:minCount 1 ; 
		sh:maxCount 1 ; 
		sh:message "La relazione dell'anomalia con il suo tipo è obbligatoria: core:hasType deve essere materializzata"
		] .