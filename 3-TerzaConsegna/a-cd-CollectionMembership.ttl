@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix ex: <https://w3id.org/arco/shacl/> .

ex:CollectionMembershipShape
    a sh:NodeShape ;
    sh:targetClass a-cd:CollectionMembership ;
	sh:property [              
		sh:path a-cd:involvesCollection ;     
		sh:or (
            [ sh:class a-cd:PrintingPlatesSeries ]
            [ sh:class cis:CollectionCulEnt ]
            [ sh:class a-cd:NumismaticSeries ]
			[ sh:class a-arc:ArchivalResource ]
			[ sh:class a-cd:AudioCollection ]
			[ sh:class a-cd:VideoCollection ]
			[ sh:class a-spe:SpecimenCollection ]
            ) ;
		sh:severity sh:Warning ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:message "La relazione dell'appartenenza a collezione con la sua collezione è obbligatoria: a-cd:involvesCollection deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-cd:involvesMember ;     
		sh:nodeKind sh:IRI ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "La relazione dell'appartenenza a collezione con la sua collezione è obbligatoria: a-cd:involvesMember deve essere materializzata"
		] ;
	
	# NON OBBLIGATORIE
	sh:property [              
		sh:path a-cd:collectionLeavingReason ;     
		sh:nodeKind sh:Literal ;
		] ;
	sh:property [              
		sh:path l0:positionInSequence ;     
		sh:nodeKind sh:Literal ;
		] ;
	sh:property [              
		sh:path ti:atTime ;     
		sh:class ti:TimeInterval ;
		] .