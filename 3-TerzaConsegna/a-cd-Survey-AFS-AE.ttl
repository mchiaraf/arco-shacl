ex:SurveyShape
    a sh:NodeShape ;
    sh:targetClass a-cd:ArchaeologicalFieldSurvey ,
		a-cd:Survey ,
		a-cd:a-cd:ArchaeologicalExcavation ;
	sh:property [              
		sh:path l0:name ;     
		sh:nodeKind rdfs:Literal ;
		sh:severity sh:Violation ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:message "La relazione della ricognizione archeologica con il suo nome è obbligatoria: l0:name deve essere materializzata"
		] ;
	sh:property [              
		sh:path ti:atTime ;     
		sh:class ti:TimeInterval ;
		sh:severity sh:Violation ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:message "La relazione della ricognizione archeologica con il suo riferimento cronologico è obbligatoria: ti:atTime deve essere materializzata"
		] ;
	# NON OBBL ANAGRAFICA
	sh:property [              
		sh:path a-cd:hasSurveyMethod ;     
		sh:class a-cd:SurveyMethod ;
		] ;
	sh:property [              
		sh:path a-cd:hasSurveyMotivation ;     
		sh:class a-cd:SurveyMotivation ;
		] ;
	sh:property [              
		sh:path a-cd:environmentalState ;     
		sh:nodeKind rdfs:Literal ;
		] .