# metti non obb anche dati di dominio es: user + spatialCov --> vedi campi

ex:UseShape
    a sh:NodeShape ;
    sh:targetClass a-cd:Use ;
	sh:property [              
		sh:path a-cd:hasUseFunction ;     
		sh:class a-cd:UseFunction ;
		sh:severity sh:Warning ;
		sh:minCount 1 ; 
		sh:message "La relazione dell'uso con la sua funzione d'uso Ã¨ obbligatoria: a-cd:hasUseFunction deve essere materializzata"
		] ;
	sh:property [              
		sh:path core:hasType ;     
		sh:class a-cd:UseType ;
		] ;
	
	# NON OBBLIGATORIE
	sh:property [              
		sh:path a-cd:useConditions ;     
		sh:nodeKind sh:Literal ;
		] ;
	sh:property [              
		sh:path a-cd:hasCircumstance ;     
		sh:class a-cd:Circumstance ;
		] ;
	sh:property [              
		sh:path ti:atTime ;     
		sh:class ti:TimeInterval ;
		] .