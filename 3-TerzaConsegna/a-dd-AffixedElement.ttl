ex:AffixedElementShape
    a sh:NodeShape ;
    sh:targetClass a-dd:AffixedElement ;
	sh:property [              
		sh:path core:hasType ;    
		sh:nodeKind sh:IRI ;
		sh:minCount 1 ;
		sh:severity sh:Violation ;
		sh:message "La relazione dell'elemento tecnico con la sua tipologia tecnica Ã¨ obbligatoria: core:hasType deve essere materializzata"
		] ;
	#non obbligatoria
	sh:property [              
		sh:path a-dd:positionOnCulturalProperty ;     
		sh:nodeKind sh:Literal ;
		] ;
	sh:property [              
		sh:path core:descriprion ;     
		sh:nodeKind sh:Literal ;
		] ;
	sh:property [              
		sh:path a-dd:occurrences ;     
		sh:nodeKind sh:Literal ;
		] ;
	sh:property [              
		sh:path a-dd:hasSupport ;    
		sh:class a-dd:Support ;
		] ;
	sh:property [              
		sh:path a-dd:hasFunctionalPurpose ;    
		sh:class a-dd:UseFunction ;
		] ;
	sh:property [              
		sh:path lang:hasLanguage ;    
		sh:class lang:Language ;
		] ;
	sh:property [              
		sh:path a-dd:hasWritingSystem ;    
		sh:class a-dd:WritingSystem ;
		] ;
	sh:property [              
		sh:path a-dd:hasFontStyle ;    
		sh:class a-dd:FontStyle ;
		] ;
	sh:property [              
		sh:path a-lite:hasMaterialOrTechnique ;    
		sh:class a-dd:TechnicalCharacteristic ;
		] ;
	sh:property [              
		sh:path a-dd:transcript ;    
		sh:nodeKind sh:Literal ;
		] ;
	sh:property [              
		sh:path a-lite:hasAuthor ;    
		sh:class l0:Agent ;
		] ;
	sh:property [              
		sh:path a-dd:refersToAgent ;    
		sh:class l0:Agent ;
		] .