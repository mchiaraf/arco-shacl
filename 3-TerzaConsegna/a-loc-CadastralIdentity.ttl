ex:CadastralIdentityShape
    a sh:NodeShape ;
    sh:targetClass a-cd:CadastralIdentity ;
	sh:property [              
		sh:path a-loc:isContainedInCadastre ;     
		sh:class a-loc:Cadastre ;
		sh:severity sh:Violation ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:message "La relazione del'identità catastale con il suo catasto è obbligatoria: a-loc:isContainedInCadastre deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-loc:hasCadastralCity ;     
		sh:class clv:City ;
		sh:severity sh:Violation ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:message "La relazione del'identità catastale con la città di riferimento è obbligatoria: a-loc:hasCadastralCity deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-loc:hasCadastralEntity ;     
		sh:class a-loc:Folio ;
		sh:severity sh:Violation ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:message "La relazione del'identità catastale con il foglio è obbligatoria: a-loc:hasCadastralEntity deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-loc:hasCadastralEntity ;     
		sh:class a-loc:CadastralUnitCollection ;
		sh:severity sh:Violation ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:message "La relazione del'identità catastale con le particelle catastali è obbligatoria: a-loc:hasCadastralEntity deve essere materializzata"
		] ;
	# NON OBBLIGATORIE
	sh:property [              
		sh:path a-loc:hasCadastralEntity ;     
		sh:class a-loc:CadastralSubordinate ;
		] ;
	sh:property [              
		sh:path a-cd:hasLegalSituation ;     
		sh:class a-cd:LegalSituation ;
		] ;
	sh:property [              
		sh:path a-lite:hasOwner ;     
		sh:class l0:Agent ;
		] .