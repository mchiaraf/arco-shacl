@prefix ex: <https://w3id.org/arco/shacl/> .

ex:CadastreShape
    a sh:NodeShape ;
    sh:targetClass a-cd:Cadastre ;
	sh:property [              
		sh:path core:hasType ;     
		sh:or (
			[ sh:hasValue a-loc:LandCadastre ]
			[ sh:hasValue a-loc:BuildingCadastre ]
			[ sh:hasValue a-loc:BuildingAndLandCadastre ]
		) ;
		sh:severity sh:Violation ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:message "La relazione del catasto con la sua tipologia è obbligatoria: core:hasType deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-lite:hasCity ;     
		sh:class clv:City ;
		sh:severity sh:Violation ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:message "La relazione del catasto con la città di riferimento è obbligatoria: a-lite:hasCity deve essere materializzata"
		] ;
	sh:property [              
		sh:path l0:name ;     
		sh:nodeKind rdfs:Literal ;
		sh:minCount 1 ;
		sh:severity sh:Violation ;
		sh:message "La relazione del catasto con il suo nome è obbligatoria: l0:name deve essere materializzata"
		] .