# Capire anche da ICCD quale saranno i descrittori delle collezioni

ex:CollectionCulEntShape
    a sh:NodeShape ;
    sh:targetClass cis:CollectionCulEnt ; # estenderlo anche alle altre collezioni specifiche??
	sh:property [              
		sh:path a-lite:hasCollectionMember ;     
		sh:nodeKind sh:IRI ;
		sh:severity sh:Violation ;
		sh:minCount 1 ;
		sh:message "La relazione della collezione con un suo memebro Ã¨ obbligatoria: a-lite:hasMember deve essere materializzata"
		] ;
	
	# NON OBBLIGATORIE
	sh:property [              
		sh:path a-lite:hasCollector ;     
		sh:or (
            [ sh:class l0:Agent ]
            [ sh:class cpv:Person ]
            [ sh:class cov:Organization ]
            ) ;
		] ;
	sh:property [              
		sh:path cis:hasMemberColCulEnt ; # questo per le riflessive: collezioni di collezioni ?
		sh:nodeKind sh:IRI ;
		] ;
	sh:property [              
		sh:path ti:atTime ;     
		sh:class ti:TimeInterval ;
		] .