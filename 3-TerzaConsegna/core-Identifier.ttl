@prefix ex: <https://w3id.org/arco/shacl/> .

ex:IdentifierShape
    a sh:NodeShape ;
    sh:targetClass core:Identifier ;
	sh:property [              
		sh:path core:hasType ;     
		sh:or (
			[ sh:hasValue core:LocalIdentifier ]
			[ sh:hasValue core:NationalIdentifier ]
			[ sh:hasValue core:SystemIdentifier ]
			[ sh:hasValue core:UniqueIdentifier ]
			[ sh:hasValue core:InternationalIdentifier ]
			[ sh:hasValue core:ICCDIdentifier ]
		) ;
		sh:severity sh:Warning ;
		sh:message "La relazione dell'identificativo con la sua tipologia è consigliata: core:hasType potrebbe essere materializzata e avere come oggetto gli individui previsti da core:IdentifierType."
		] ;
	sh:property [              
		sh:path core:identifier ;     
		sh:nodeKind sh:Literal ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "La relazione dell'identificativo con la stringa corrispondente al suo id è obbligatoria: core:identifier deve essere materializzata"
		] ;
	
	# NON OBBLIGATORIE
	sh:property [              
		sh:path core:issuedBy ;     
		sh:nodeKind sh:IRI ;
		] ;
	sh:property [              
		sh:path core:current ;     
		sh:nodeKind sh:Literal ;
		] .