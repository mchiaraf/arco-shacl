### CATALOGUING CAMPAIGN

ex:ActivityStatusDisjointShape
    a sh:NodeShape ;
    sh:targetClass a-cc:ActivityStatus ;
	sh:message "Un individuo della classe a-cc:ActivityStatus non può essere anche di tipo a-cc:ApplicationStatus o a-cc:CampaignStatus" ;
    sh:severity sh:Violation ;
	sh:not [
			sh:or (
				[ sh:class a-cc:ApplicationStatus ]
				[ sh:class a-cc:CampaignStatus ]
			)
		] .

