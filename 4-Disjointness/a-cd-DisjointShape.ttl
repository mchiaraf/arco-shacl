ex:SituationCDDisjointShape
    a sh:NodeShape ;
    sh:targetSubjectsOf rdf:type ; # soggetti con un tipo
    sh:filterShape [     # restrizione solo se il tipo è uno dei seguenti tipi
        sh:property [
            sh:path rdf:type ;
            sh:in (
                a-cd:Acquisition
                a-cd:Anomaly
                a-cd:ChangeOfAvailability
                a-cd:Circumstance
                a-cd:CoinIssuance
                a-cd:ExportImportCertification
                a-cd:LegalSituation
                a-cd:CollectionMembership
                a-cd:RelatedWorkSituation
            ) ;
        ] ;
    ] ;
    sh:message "Un individuo può essere di una sola tipologia tra a-cd:Acquisition, a-cd:Anomaly, a-cd:ChangeOfAvailability, a-cd:Circumstance, a-cd:CoinIssuance, a-cd:ExportImportCertification, a-cd:LegalSituation, a-cd:CollectionMembership, a-cd:RelatedWorkSituation." ;
    sh:severity sh:Violation ;
    sh:xone ( 	# solo una classe tra le seguenti
        [ sh:class a-cd:Acquisition ]
        [ sh:class a-cd:Anomaly ]
        [ sh:class a-cd:ChangeOfAvailability ]
        [ sh:class a-cd:Circumstance ]
        [ sh:class a-cd:CoinIssuance ]
        [ sh:class a-cd:ExportImportCertification ]
        [ sh:class a-cd:LegalSituation ]
        [ sh:class a-cd:CollectionMembership ]
        [ sh:class a-cd:RelatedWorkSituation ]
    ) .


