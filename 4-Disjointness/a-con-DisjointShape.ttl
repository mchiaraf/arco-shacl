### CONSTRUCTION

ex:ConstructionElementSpaceDisjointShape
    a sh:NodeShape ;
    sh:targetSubjectsOf rdf:type ; # soggetti con un tipo
    sh:filterShape [     # restrizione solo se il tipo è uno dei ConstructionElement
        sh:property [
            sh:path rdf:type ;
            sh:in (
                a-con:ConstructionElement
                a-con:ConstructionSpace
            ) ;
        ] ;
    ] ;
    sh:message "Un individuo può essere di una sola tipologia tra a-con:ConstructionElement, a-con:ConstructionSpace" ;
    sh:severity sh:Violation ;
    sh:xone ( 	# solo una classe tra le seguenti
        [ sh:class a-con:ConstructionElement ]
        [ sh:class a-con:ConstructionSpace ]
    ) .

