ex:ElementDisjointShape
    a sh:NodeShape ;
    sh:targetSubjectsOf rdf:type ; # soggetti con un tipo
    sh:filterShape [     # restrizione solo se il tipo è uno dei ConstructionElement*
        sh:property [
            sh:path rdf:type ;
            sh:in (
                a-con:ArchitecturalElement
                a-con:FurnishingElement
                a-con:NaturalElement
                a-con:TransportElement
            ) ;
        ] ;
    ] ;
    sh:message "Un individuo può essere di una sola tipologia tra a-con:ArchitecturalElement, a-con:FurnishingElement, a-con:NaturalElement, a-con:TransportElement." ;
    sh:severity sh:Violation ;
    sh:xone ( 	# solo una classe tra le seguenti
        [ sh:class a-con:ArchitecturalElement ]
        [ sh:class a-con:FurnishingElement ]
        [ sh:class a-con:NaturalElement ]
		[ sh:class a-con:TransportElement ]
    ) .

ex:ConstructionTypesDisjointShape
    a sh:NodeShape ;
    sh:targetSubjectsOf rdf:type ; # soggetti con un tipo
    sh:filterShape [     # restrizione solo se il tipo è uno delle classi seguenti 
        sh:property [
            sh:path rdf:type ;
            sh:in (
                a-con:ConnectionElementType
                a-con:CoveringType
                a-con:FoundationType
                a-con:HorizontalElementType
				a-con:RoofType
				a-con:VerticalElementType
				a-con:WaterSystemType
				a-con:WindowType
            ) ;
        ] ;
    ] ;
    sh:message "Un individuo può essere di una sola tipologia tra a-con:ConnectionElementType, a-con:CoveringType, a-con:FoundationType, a-con:HorizontalElementType, a-con:RoofType, a-con:VerticalElementType, a-con:WaterSystemType, a-con:WindowType" ;
    sh:severity sh:Violation ;
    sh:xone ( 	# solo una classe tra le seguenti
        [ sh:class a-con:ConnectionElementType ]
        [ sh:class a-con:CoveringType ]
        [ sh:class a-con:FoundationType ]
		[ sh:class a-con:HorizontalElementType ]
		[ sh:class a-con:RoofType ]
		[ sh:class a-con:VerticalElementType ]
		[ sh:class a-con:WaterSystemType ]
		[ sh:class a-con:WindowType ]
    ) .

