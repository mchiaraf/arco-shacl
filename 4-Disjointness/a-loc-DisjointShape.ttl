### LOCATION 

ex:GeometryTechniqueMethodDisjointShape
    a sh:NodeShape ;
    sh:targetSubjectsOf rdf:type ; # soggetti con un tipo
    sh:filterShape [     # restrizione solo se il tipo è uno dei seguenti tipi
        sh:property [
            sh:path rdf:type ;
            sh:in (
                a-loc:GeometryMethod
                a-loc:GeometryTechnique
            ) ;
        ] ;
    ] ;
    sh:message "Un individuo può essere di una sola tipologia tra a-loc:GeometryMethod, a-dd:GeometryTechnique." ;
    sh:severity sh:Violation ;
    sh:xone ( 	# solo una classe tra le seguenti
        [ sh:class a-loc:GeometryTechnique ]
        [ sh:class a-loc:GeometryMethod ]
    ) .

ex:AddressComponentDisjointShape
    a sh:NodeShape ;
    sh:targetSubjectsOf rdf:type ; # soggetti con un tipo
    sh:filterShape [     # restrizione solo se il tipo è uno dei seguenti tipi
        sh:property [
            sh:path rdf:type ;
            sh:in (
                clv:Address
                clv:AddressComponent
            ) ;
        ] ;
    ] ;
    sh:message "Un individuo può essere di una sola tipologia tra clv:Address, clv:AddressComponent." ;
    sh:severity sh:Violation ;
    sh:xone ( 	# solo una classe tra le seguenti
        [ sh:class clv:Address ]
        [ sh:class clv:AddressComponent ]
    ) .
