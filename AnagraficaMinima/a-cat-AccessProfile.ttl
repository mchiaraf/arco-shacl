ex:AccessProfile
    a sh:NodeShape ;
    sh:targetClass a-cat:AccessProfile ;
	sh:property [              
		sh:path a-cat:hasPrivacyLevel ;     
		# sh:class a-cat:PrivacyLevel ; # commentato perchè la classe degli individui è istanziata nell'onto e non nell'output rdf
		# eventualmente si possono fare restrizioni sugli individui dell'ontologia, da valutare se resteranno quelli gli uri o sarà un voc
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
        sh:message "La relazione del profilo d'accesso ai dati con il livello di privacy (cosiddetto 'Profilo di pubblicazione': 1, 2, 3) è obbligatoria: a-cat:hasPrivacyLevel deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-cat:hasPrivacyReason ;     
		sh:class a-cat:PrivacyReason ;
		# relazione opzionale
		] ;
	sh:property [              
		sh:path a-cd:expiryDate ;     
		sh:nodeKind sh:Literal ;
		# relazione opzionale
		] .