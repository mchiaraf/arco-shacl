ex:DatingShape
    a sh:NodeShape ;
    sh:targetClass a-cd:Dating ;
	sh:property [              
		sh:path a-cd:hasDatingEvent ;     
		sh:class l0:Event ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "La relazione della cronologia con l'evento di cui si determina il tempo è obbligatoria: a-cd:hasDatingEvent deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-cd:hasTimeInterval ;     
		sh:nodeKind sh:IRI ; # possibile specificazione con la TemporalEntity 
		sh:minCount 1 ;
		sh:severity sh:Violation ;
		sh:message "La relazione della cronologia con la dimensione temporale è obbligatoria: a-cd:hasTimeInterval deve essere materializzata"
		] .