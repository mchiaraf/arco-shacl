@prefix ex: <https://w3id.org/arco/shacl/> .

ex:GeometryShape
    a sh:NodeShape ;
    sh:targetClass a-loc:Geometry ;
	sh:property [              
		sh:path clv:hasGeometryType ;     
		sh:nodeKind sh:IRI ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "La relazione della georeferenziazione con la sua tipologia è obbligatoria: clv:hasGeometryType deve essere materializzata"
		] ;
	sh:property [              
		sh:path clv:serialization ;     
		sh:datatype <http://www.opengis.net/ont/geosparql#wktLiteral> ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "La relazione della georeferenziazione con la sua serializzazione è obbligatoria: clv:serialization deve essere materializzata"
		] ;
	sh:property [              
		sh:path clv:coordinateSystem ;     
		sh:nodeKind sh:Literal ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "La relazione della georeferenziazione con il suo sistema di riferimento è obbligatoria: clv:coordinateSystem deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-loc:hasGeometryTechnique ;     
		sh:class a-loc:GeometryTechnique ;
		sh:maxCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "La relazione della georeferenziazione con la sua tecnica di georeferenziazione è obbligatoria: a-loc:hasGeometryTechnique deve essere materializzata"
		] ;
	sh:property [              
		sh:path a-loc:hasGeometryMethod ;     
		sh:class a-loc:GeometryMethod ;
		sh:maxCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "La relazione della georeferenziazione con suo metodo di posizionamento è obbligatoria: a-loc:hasGeometryMethod deve essere materializzata"
		] ;
	#non abbligatorie
	sh:property [              
		sh:path a-loc:hasBaseMap ;     
		sh:class a-loc:BaseMap ;
		] .